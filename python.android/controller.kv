#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Label:
            height: 24
            text_size: self.size
            color: (1, 1, 1, .8)
            text: 'Controller'
            valign: 'middle'

    BoxLayout:
        StackLayout:
            id: sl
   
    BoxLayout:
    	BoxLayout:
            id: flashButton
            size_hint: .6,1
        BoxLayout:
        	canvas:
				Color:
	            	rgb: 1,1,1
				Rectangle:
					pos: self.pos
					size: self.size
        	orientation:'vertical'
            id: sl2
            size_hint: 2,1
  

    Button:
        text: 'Ferma Tutto'
        size_hint_y: None
        height: '50sp'
        on_press: app.release_audio()


