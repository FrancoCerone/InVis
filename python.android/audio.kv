#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1, 1, 0
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'
        Label:
            height: 24
            text_size: self.size
            color: (1, 1, 1, .8)
            text: 'Controller'
            valign: 'middle'

    BoxLayout:
        StackLayout:
            id: sl
    
    BoxLayout:
        BoxLayout:
            id: sl2

    Button:
        text: 'Ferma Tutto'
        size_hint_y: None
        height: '50sp'
        on_press: app.release_audio()


